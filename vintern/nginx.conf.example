# NGINX Configuration for Vintern OCR API
# Place this in /etc/nginx/sites-available/vintern-ocr

upstream vintern_ocr_backend {
    # Vintern OCR API
    server localhost:11200;

    # For load balancing multiple instances
    # server localhost:11200 weight=1;
    # server localhost:11201 weight=1;
}

server {
    listen 80;
    server_name ocr.yourdomain.com;  # Change this to your domain

    # Max upload size (should match or exceed API's MAX_FILE_SIZE)
    client_max_body_size 20M;

    # Timeouts for long-running requests
    proxy_read_timeout 300s;
    proxy_connect_timeout 75s;
    proxy_send_timeout 300s;

    # Logging
    access_log /var/log/nginx/vintern-ocr-access.log;
    error_log /var/log/nginx/vintern-ocr-error.log;

    location / {
        proxy_pass http://vintern_ocr_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # CORS headers (if not handled by API)
        # add_header 'Access-Control-Allow-Origin' '*' always;
        # add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
        # add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range' always;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://vintern_ocr_backend/health;
        access_log off;
    }

    # API documentation
    location /docs {
        proxy_pass http://vintern_ocr_backend/docs;
    }

    location /redoc {
        proxy_pass http://vintern_ocr_backend/redoc;
    }

    # OpenAPI schema
    location /openapi.json {
        proxy_pass http://vintern_ocr_backend/openapi.json;
    }
}

